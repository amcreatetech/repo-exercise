<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loyalty_history_form" model="ir.ui.view">
        <field name="name">loyalty.history.form</field>
        <field name="model">loyalty.history</field>
        <field name="inherit_id" ref="loyalty.loyalty_history_form"/>
        <field name="arch" type="xml">
            <field name="used" position="after">
                <field name="deposit_method" placeholder="e.g., Direct"/>
                <field name="reference" placeholder="e.g., Reference"/>
                <field name="bank"/>
                <field name="account_number"/>
            </field>
            <xpath expr="//sheet" position="before">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>