<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_caram_ride_tree" model="ir.ui.view">
        <field name="name">caram.ride.tree</field>
        <field name="model">caram.ride</field>
        <field name="arch" type="xml">
            <list string="Rides">
                <field name="ride_id"/>
                <field name="rider_id"/>
                <field name="driver_id"/>
                <field name="fare_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="company_id" optional="hide" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_caram_ride_form" model="ir.ui.view">
        <field name="name">caram.ride.form</field>
        <field name="model">caram.ride</field>
        <field name="arch" type="xml">
            <form string="Ride">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ride_id" placeholder="Ride ID"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="rider_id"/>
                            <field name="driver_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="fare_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="paid_at" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Payments">
                            <group>
                                <group>
                                    <field name="wallet_paid" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="cash_paid" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <group>
                                    <field name="commission_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_caram_ride" model="ir.actions.act_window">
        <field name="name">Rides</field>
        <field name="res_model">caram.ride</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first CarAm ride
            </p>
        </field>
    </record>

</odoo>


